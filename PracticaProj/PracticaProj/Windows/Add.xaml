<Window x:Class="PracticaProj.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:PracticaProj"
        mc:Ignorable="d"
        Title="Add" Height="350" Width="500">
    <UniformGrid Margin="40 60" Rows="5">
        <UniformGrid MaxHeight="30" Columns="2">
            <Label>Category</Label>
            <ComboBox></ComboBox>
        </UniformGrid>
        <UniformGrid MaxHeight="30" Columns="2">
            <Label>Name of order</Label>
            <ComboBox></ComboBox>
        </UniformGrid>
        <UniformGrid MaxHeight="30" Columns="2">
            <Label>Count</Label>
            <TextBox></TextBox>
        </UniformGrid>
        <UniformGrid MaxHeight="30" Columns="2">
            <Label>Cost</Label>
            <WrapPanel>
                <TextBox MinWidth="175"></TextBox>
                <Label Margin="5 0 0 0">р.</Label>
            </WrapPanel>
        </UniformGrid>
        <UniformGrid MaxHeight="30" Columns="2">
            <Button Margin="10 0">Add</Button>
            <Button Margin="10 0">Cancel</Button>
        </UniformGrid>
    </UniformGrid>
</Window>
