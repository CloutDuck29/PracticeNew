<Window x:Class="PracticaProj.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaProj"
        mc:Ignorable="d"
        Title="Captcha" Height="350" Width="350">
    <UniformGrid Margin="50" VerticalAlignment="Center" Rows="2">
        <UniformGrid>
            <Label>Input</Label>
            <TextBox></TextBox>
        </UniformGrid>
        <UniformGrid Background="gray">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="20">
                Captcha 10 symbols
            </Label>
        </UniformGrid>
    </UniformGrid>
</Window>
